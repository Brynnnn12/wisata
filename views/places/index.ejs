<% layout('layouts/app') %>


<h1>Semua Wisata</h1>
<a href="places/create" class="btn btn-primary mt-2 mb-4">Tambah</a>

  <% for(const place of places) { %>
    <div class="card mb-3">
      <div class="row">
        <div class="col-md-4">
          <img src="/images/<%= place.images[0].filename %>" alt="<%= place.title %>" class="img-fluid">
        </div>
        <div class="col-md-8 p-4">
          <h5 class="card-title"><%= place.title %></h5>
          <p class="card-title"><%= place.description %></p>
          <p class="card-text">
            <small class="text-secondary"><%= place.location %></small>
          </p>
          <a href="/places/<%= place._id %>" class="btn btn-primary">Lihat <%= place.title %></a>

        </div>
      </div>
    </div>
  <% } %>

